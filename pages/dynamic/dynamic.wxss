.d-list-item {
  list-style: none;
  padding: 0;
  margin: 0;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
}


.dynamic-msg {
  position: relative;
  padding: 30rpx;
  padding-bottom: 0;
}

.dynamic-msg-header{
  font-size: 30rpx;
  line-height: 45rpx;
  color: #333;
}

.dynamic-msg-date{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #555;
}
.dynamic-msg-content {
  overflow: hidden;
  position: relative;
  padding-top:15rpx;
}

.content-img {
  width: 30%;
  overflow: hidden;
  float: left;
}

.img{
  height: 200rpx;
}


.content-describe {
  box-sizing: border-box;
  width: 70%;
  float: left;
  padding: 0;
  margin: 0;
  text-indent: 2em;
  /*设置超出隐藏start*/
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
  /*end*/
  line-height: 42rpx;
  font-size: 26rpx;
  padding-left:15rpx;
  padding-right:15rpx;
  color: #666666;
}


.dynamic-msg-cut {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}

