/* 介绍内容描述 */
.jdDescribe{
  position: fixed;
  width:600rpx;
  padding:12rpx;
  border-radius: 20rpx;
  background: rgba(255,255,255,0.8);
  left:50%;
  transform: translateX(-300rpx);
  top:100%;
  opacity: 1;
  transition: all 0.3s ease;
}

.jdHead{
  width:100%;
  line-height: 48rpx;
  height:48rpx;
  font-size:28rpx;
}

.jdTitle{
  width:80%;
  margin-left:25rpx;
  float:left;
}
.jdContent{
  padding:10rpx 0;
}
