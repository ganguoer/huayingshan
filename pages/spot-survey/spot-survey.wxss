/* pages/eat-item/eat-item.wxss */
view,text{
  letter-spacing:2rpx;
  box-sizing:border-box;
}
.slide swiper {
  height: 360rpx;
}

image.slide-image {
  width: 100%;
  height: 100%;
}
/* .eat-item-img{
  width:100%;
} */
.eat-content{
  font-size: 24rpx;
  padding:0 30rpx 30rpx;
  border-bottom:1px solid #eaeaea;
}
.address{
  display:flex;
  padding:30rpx;
}
.spotAddress{
  font-size:27rpx;
  flex:1;
}
.xy{
  width:90rpx;
  height:70rpx;
}
/* .rightArrow{
  height:24rpx;
  width:32rpx;
} */

.row{
  height: 13rpx;
  background-color: #F3F3F3;
  border-top:1rpx solid #eaeaea;
  border-bottom:1rpx solid #eaeaea;
  padding: 0 30rpx;
}

.eat-comment-area{
  padding:0 30rpx 70rpx;
  border-bottom:1px solid #eaeaea;
}
.eat-comment{
  padding:25rpx 0;
}
.headPic{
  height: 46rpx;
  width:46rpx;
  margin:20rpx 10rpx;

}
.comment-star{
  width:112rpx;
  height:18rpx;
}

.comment-title{
  font-size:28rpx;
  padding:30rpx 0 0 30rpx;
}

.eat-comment{
  display:flex;
}
.comment-mid{
  flex:1;
}
.pass-name{
  font-size:27rpx;
}
.comment-time{
  font-size:27rpx;
  color:#888888;
  margin:36rpx;
}
.comment-content{
  font-size:28rpx;
  margin:-22px 30px;
}

.travel-content{
  font-size: 28rpx;
  padding:30rpx 30rpx;
  border-bottom:1px solid #eaeaea;
  display:flex;
}
.price{
  flex:1;
}

.ticket{
  width:36rpx;
  height:25rpx;
  padding-left:20rpx;
}
.game-ticket{
  font-size:30rpx;
  padding-left:20rpx;
  width:100%;
  height:82rpx;
  line-height:82rpx;
  background-color:#FFFAE8;
}

.price1{
  color:#F9381A;
}
.price2{
  color:#F9381A;
  font-size:35rpx;
}
.price3{
  color:#A2A2A2;
}

.reserve{
  padding:8rpx 40rpx;
  border-radius:15rpx;
  background:#F9381A;
  color:#fff;
  margin-left:30rpx;
  font-size:28rpx;
}

.slmap{
  width:100%;
}

.map{
  width: 690rpx;
  height: 378rpx;
  margin: 0 auto;
  display: block;
  margin-bottom: 30rpx;
}