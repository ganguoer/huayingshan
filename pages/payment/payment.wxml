<!--pages/tijiao/tijiao.wxml-->
<view class="con">
  <!-- 订单详情开始 -->
  <view class="section">
    <view class="title">
      <text>酒店信息</text>
    </view>
    <view class="info">
      <view class="item">
        <text>酒店名称：</text>
        <text>{{title}}</text>
      </view>
      <view class="item">
        <text>{{roomname}}</text>
        <text> {{dingnum}}间</text>
      </view>
      <view class="item">
        <text>入住日期：</text>
        <text>{{startdate}}</text>
      </view>
      <view class="item">
        <text>离店日期：</text>
        <text>{{leavedate}}</text>
      </view>
    </view>
  </view>
  <!-- 订单详情结束 -->
  <!-- 服务详情开始 -->
  <view class="section">
    <view class="title">
      <text>客人信息</text>
    </view>
    <view class="info">
      <view class="item">
        <text>入住人：</text>
        <text>{{linkman}}</text>
      </view>
      <view class="item">
        <text>联系方式：</text>
        <text>{{linktel}}</text>
      </view>
      <view class="">
        <text>备注说明：</text>
        <text>{{remark}}</text>
      </view>
    </view>
  </view>
  <!-- 服务详情结束 -->
  <!-- 支付方式开始 -->
  <view class="section">
    <view class="title">
      <text>支付方式</text>
    </view>
    <view class="info">
      <view class="item item3">
        <text>微信支付：</text>
        <icon type="success" size="25" />
      </view>
    </view>
  </view>
  <!-- 支付方式结束 -->
  <!-- 底部部分开始 -->
  <view class="confirm">

    <view class="text2">
      <text>待支付：￥</text>
      <text class="red">{{price}}</text>
    </view>
   
      <button  class="text3" bindtap="payoff">确认支付</button>
  
  </view>
  <!-- 底部部分结束 -->
</view>